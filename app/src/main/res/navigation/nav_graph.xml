        <action
            android:id="@+id/action_exerciseFragment_to_mainFragment"
            app:destination="@+id/mainFragment">
            <argument
                android:name="resultText"
                app:argType="string"/>
            <argument
                android:name="accuracy"
                app:argType="integer"/>
        </action>

    </fragment>

